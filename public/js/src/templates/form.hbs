<form>
    <div class="row">
        <div class="large-6 columns">
            <label>BoardGameGeek Username
                <input type="text" data-model-attribute="bggUserName" placeholder="" />
            </label>
        </div>
        <div class="large-6 columns" id="top-notification"></div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            <label>Min Length
                <select data-model-attribute="minTime">
                    <option selected value="5">5 minutes</option>
                    <option value="15">15 minutes</option>
                    <option value="30">30 minutes</option>
                    <option value="45">45 minutes</option>
                    <option value="60">1 hour</option>
                    <option value="90">90 minutes</option>
                    <option value="120">2 hours</option>
                    <option value="180">3 hours</option>
                    <option value="240">4 hours</option>
                    <option value="480">8 hours</option>
                </select>
            </label>
        </div>
        <div class="large-6 columns">
            <label>Max Length
                <select data-model-attribute="maxTime">
                    <option value="5">5 minutes</option>
                    <option value="15">15 minutes</option>
                    <option value="30">30 minutes</option>
                    <option value="45">45 minutes</option>
                    <option value="60">1 hour</option>
                    <option value="90">90 minutes</option>
                    <option value="120">2 hours</option>
                    <option value="280">3 hours</option>
                    <option value="240">4 hours</option>
                    <option selected value="480">8 hours</option>
                </select>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <label># of Players
                <input data-model-attribute="numberOfPlayers" type="text" placeholder="any" />
            </label>
        </div>
        <div class="large-4 columns">
            <label>Min User Rating
                <input data-model-attribute="minRating" type="text" placeholder="0" />
            </label>
        </div>
        <div class="large-4 columns" style="margin-top:25px">
            <input data-model-attribute="includeUnrated" id="checkbox1" checked type="checkbox">
            <label for="checkbox1">include unranked</label>
        </div>
    </div>
    <div class="row">
        <div class="large-3 columns">
            <a href="#" class="button" style="width: 100%">Pick a Game</a>
        </div>
        <div class="large-6 columns" id="bottom-notification"></div>
        <div class="large-3 columns"></div>
    </div>

</form>